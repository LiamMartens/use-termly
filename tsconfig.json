{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node16",
    "target": "es6",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["DOM", "ES2020"]
  },
  "include": ["src"],
  "exclude": [
    "node_modules"
  ]
}